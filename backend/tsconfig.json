{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true, // добавьте это, если вам нужны типы деклараций
    "declarationMap": true // добавьте это, если вам нужны карты деклараций
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}